<!DOCTYPE html>
<html>
  <head>
    <title>RailsFlashcards</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1>Flashcards, Eventually.</h1>
    <nav>
      <ul>
        <li><%= link_to "home", '/' %></li>
      <% if current_user %>
        <li><%= link_to current_user.username, "/users/#{current_user.id}" %></li>
        <li><%= link_to "logout", '/logout' %></li>
      <% else %>
        <li><%= link_to "signup", '/signup' %></li>
        <li><%= link_to "login", '/login' %></li>
      <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
